@model List<Property>

<div class="card shadow border-0 mb-3">

    <div class="card-header bg-primary text-white m-lg-0 py-3">
        <div class="d-flex justify-content-between align-items-center">
            <!-- Title -->
            <h2 class="text-white py-2">
                @(User.IsInRole(SD.Role_Agent) ? "Agent Property List" : "All Properties listed on RentARoom") 
            </h2>
            
            <!-- Buttons -->
            <div class="d-flex">
                <!-- Notifications Button -->
                <button type="button" class="btn btn-secondary me-2">
                    <i class="bi bi-bell-fill"></i>
                    Notifications
                </button>
                <!-- Property Create Button -->
                <a asp-area="Agent" asp-controller="Properties" asp-action="Upsert" class="btn btn-secondary">
                    <i class="bi bi-house-add-fill"></i>  Create New Property
                </a>
            </div>
       </div>
    </div>

    <div class="card-body p-4">
        @* https://datatables.net/ *@
        <table id="tblData" class="display table-striped table-bordered table-hover pt-2" style="width:100%">
            <thead>
                <tr>
                    <th>Address</th>
                    <th>Postcode</th>
                    <th>Agent</th>
                    <th>Rent</th>
                    <th>Beds</th>
                    <th>Floor Area</th>
                    <th>City</th>
                    <th>Type</th>
                    <th>
                    </th>
                </tr>
            </thead>            
        </table>
    </div>
</div>
@section Scripts {
    <script src="~/js/propertyDataTable.js"></script>
}