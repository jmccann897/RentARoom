@model List<Property>

<div class="card shadow border-0 mb-3">

    <div class="card-header bg-primary text-white m-lg-0 py-3">
        <h2 class="text-white py-2">Property List</h2>
    </div>

    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
                
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Properties" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-house-add-fill"></i>  Create New Property
                </a>
            </div>
        </div>

        <table id="tblData" style="width:100%">
            <thead>
                <tr>
                    <th>Address</th>
                    <th>Postcode</th>
                    <th>Owner</th>
                    <th>Rent</th>
                    <th>Bedrooms</th>
                    <th>Floor Area</th>
                    <th>Type</th>
                    
                </tr>
            </thead>            
        </table>
        
    </div>

</div>

@section Scripts{
    <script src="~/js/property.js"></script>
}
