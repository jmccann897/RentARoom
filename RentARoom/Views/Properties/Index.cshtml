@model List<Property>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Property List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Properties" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-house-add-fill"></i>  Create New Property
            </a>

        </div>
    </div>


<table class=" table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Address
            </th>
            <th>
                Postcode
            </th>
            <th>
                Owner
            </th>
            <th>
                    
            </th>
                
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.OrderBy(u=>u.Postcode))
        {
            <tr>
                <td>@obj.Address</td>
                <td>@obj.Postcode</td>
                <td>@obj.Owner</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Properties" asp-action="Edit" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Properties" asp-action="Delete" class="btn btn-secondary mx-2">
                                <i class="bi bi-trash3-fill"></i> Delete
                        </a>
                     </div>
                </td>                                       
            </tr>
        }
    </tbody>

</table>

</div>
