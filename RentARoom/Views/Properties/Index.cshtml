@model List<Property>

<div class="card shadow border-0 mb-3">

    <div class="card-header bg-primary text-white m-lg-0 py-3">
        <h2 class="text-white py-2">Property List</h2>
    </div>

    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
                
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Properties" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-house-add-fill"></i>  Create New Property
                </a>
            </div>
        </div>

        <table class=" table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Address
                    </th>
                    <th>
                        Postcode
                    </th>
                    <th>
                        Owner
                    </th>
                    <th>
                        Rent
                    </th>
                    <th>
                        Number of Bedrooms
                    </th>
                    <th>
                        Floor Area (m2)
                    </th>
                    <th>
                        Property Type
                    </th>
                    <th>


                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(u => u.Postcode))
                {
                    <tr>
                        <td>@obj.Address</td>
                        <td>@obj.Postcode</td>
                        <td>@obj.Owner</td>
                        <td>@obj.Price.ToString("c")</td>
                        <td>@obj.NumberOfBedrooms</td>
                        <td>@obj.FloorArea</td>
                        <td>@obj.PropertyType.Name</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Properties" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Properties" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-secondary mx-2">
                                    <i class="bi bi-trash3-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
        
    </div>

</div>
